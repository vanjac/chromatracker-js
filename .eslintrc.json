{
    "env": {
        "browser": true,
        "es2017": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-var": "error",
        "curly": "error",
        "strict": ["error", "global"],
        // Deprecated stylistic rules (TODO)
        "semi": ["error", "never"],
        // TypeScript handles these:
        "no-undef": "off",
        "no-unused-vars": "off"
    },
    "overrides": [
        {
            "files": ["build.mjs"],
            "parserOptions": {
                "sourceType": "module"
            }
        }
    ]
}
